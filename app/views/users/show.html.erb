
<div class="span8 offset2">
<% if @user.markets.blank? %>
<h1 class="greytext"> You Have No Markets</h1>
<h1 class="greytext"> Sign up for Your Markets <%= link_to "Here", markets_path %></h1>

<% else %>
</br>

  <table class="table table-condensed">
    <thead>
      <tr>
        <th><h1 class="greytext">Market</h1></th>
        <th><h1 class="greytext">Remove</h1></th>
      </tr>
    </thead>
    <tbody>
      <% @user.markets.each do |market| %>
      <tr>
        <td><h2><%= link_to market.name, market_path(market), :target => "_top" %></h2></td>
        <td><%= link_to(current_user.user_markets.find_by_market_id(market.id), :method => :delete, :class => 'btn btn-danger btn-large') do %>
           <i class="icon-white icon-remove"></i> Remove from My Markets</td>
          <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<% end %>

