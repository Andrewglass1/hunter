<div class="container">
  <div class="row">
    <div class="well span12" >
      <h1 class="market_title"><%= @market.name %></h1>
      <div class="sidebar_well span3">

          <div id="sidebar_accordion">
            <h3><a href="#">Filter By Provider</a></h3>
            <div>
              <p><input type="checkbox" data-property-value="true" data-property-name="run_with_gpn" class="showhide"checked/><a href="#" data-property-value="true" data-property-name="run_with_gpn" class="bouncepins">  Groupon Merchants</a></p>
              <p><input type="checkbox" data-property-value="true" data-property-name="run_with_ls" class="showhide"checked/><a href="#" data-property-value="true" data-property-name="run_with_ls" class="bouncepins">  LivingSocial Merchants</a></p>
              <p><input type="checkbox" data-property-value="true" data-property-name="third_party" class="showhide"checked/><a href="#" data-property-value="true" data-property-name="third_party" class="bouncepins">  Only Run with Third Party</a></p>
            </div>
            <h3><a href="#">Filter By Revenue</a></h3>
            <div>
              <div id='revenue-range'></div>
              <p>
                <input type="text" id="filtered-rev"/>
              </p>
            </div>
            <h3><a href="#">Filter by Run Date</a></h3>
            <div>
              <div id='date-range'></div>
              <p>
                <input type="text" id="filtered-dates"/>
              </p>
            </div>
            <h3><a href="#">Filter By Zip/Core Selling Area</a></h3>
            <div>
              <p>
                <input type="checkbox" data-property-value="CSA" data-property-name="csa" class="showhide"checked/><a href="#" data-property-value="CSA" data-property-name="csa" class="bouncepins">Inside Core Selling Area</a>
              </p>
              <p>
                <input type="checkbox" data-property-value="outsideCSA" data-property-name="csa" class="showhide"checked/><a href="#" data-property-value="outsideCSA" data-property-name="csa" class="bouncepins">Outside Core Selling Area</a>
              </p>

              <select data-placeholder="Filter by Zipcodes" style="width:200px;" id="zips" multiple class="chzn-select" tabindex="8">
                <option value=""></option>
                <% @market.zips.compact.each do |zip| %>
                <option><%= zip %></option>
                <% end %>
              </select>
              <br />
              <br />
              <br />
            </div>
            <h3><a href="#">Filter By Category</a></h3>
            <div>
              <select data-placeholder="Filter by Categories" style="width:200px;" id="categories" multiple class="chzn-select" tabindex="8">
                <option value=""></option>
                <% @market.categories.compact.each do |category| %>
                <option><%= category %></option>
                <% end %>
              </select>
              <br />
              <br />
              <br />
              <br />
            </div>
          </div>

        <a href="#" id="placeme">Place me on map</a>
        <%= link_to "View All Markets", markets_path %>
        <%= link_to "Set My Markets", user_path(current_user) %>

      </div>
      <div class="span8"><%= gmaps(@gmap_options) %></div>
      </div>
    </div>
  </div>
</div>


