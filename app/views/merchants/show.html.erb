<div class="span8 offset1">
<% if @merchant.website && @merchant.website != "N/A"%>
<h1><%= link_to @merchant.name, @merchant.website, :target => "_blank" %></h1>
<% else %>
<h1><%= @merchant.name %></h1>
<% end %>
<h3><%= "#{@merchant.address},   #{@merchant.city}, #{@merchant.zip} "%></h3>
<h3><%= @merchant.phone %></h3>
<br/>
<br/>
<h3><%= link_to "Find Merchant on Salesforce", @merchant.sfdc_url, :target => "_blank" %></h3>
<h3>Has Run With: <%=@merchant.providers_to_comma%></h3>
<h3>Total Deal Revenue: <%= number_to_currency(@merchant.total_revenue, :unit => "$") %></h3>
</div>
<br/>
<br/>
<br/>
<br/>
<div>
<table class="table table-striped pretty">
  <thead>
    <tr>
      <th><%= sortable "short_title", "Title" %></th>
      <th><%= sortable "date_added", "Date" %></th>
      <th><%= sortable "category", "Category" %></th>
      <th><%= sortable "price", "Price" %></th>
      <th><%= sortable "revenue", "Revenue" %></th>
    </tr>
  </thead>
  <tbody>
    <% @deals.each do |deal| %>
    <tr>
      <td><%= link_to deal.short_title, deal.deal_url, :target => "blank" %></td>
      <td><%= deal.date_added %></td>
      <td><%= deal.category %></td>
      <td><%= number_to_currency(deal.price, :unit => "$") %></td>
      <td><%= number_to_currency(deal.revenue, :unit => "$") %></td>
    <% end %>
    </tr>
  </tbody>
</table>
</div>